<?xml version="1.0" encoding="ISO-8859-1"?>
<format name="txt">
  <options>
    <largeblocks size="8192"/>
    <input encoding="ISO-8859-1"/>
    <output encoding="ISO-8859-1"/>
    <tag-name regexp='[^ \n\t\r]'/>
    <escape-chars regexp='[][\\/@&lt;&gt;^]'/>
    <space-chars regexp='[ \n\t\r$*]'/>
    <case-sensitive value="no"/>
  </options>

  <rules>
    <format-rule type="close" eos="yes" priority="1">
      <tag regexp='[&quot;&#x027;]\n'/>
    </format-rule>

    <format-rule type="close" eos="no" priority="1">
      <tag regexp='[&quot;&#x027;]\r'/>
    </format-rule>

    <format-rule type="empty" eos="yes" priority="2">
      <tag regexp='(("\n")|("\r\n"))+'/>
    </format-rule>

    <format-rule type="open" eos="no" priority="3">
      <tag regexp='^[&quot;&#x027;]'/>
    </format-rule>

    <format-rule type="open" eos="no" priority="3">
      <tag regexp='[\t ][&quot;&#x027;]'/>
    </format-rule>

    <format-rule type="close" eos="no" priority="4">
      <tag regexp='[&quot;&#x027;][\t ]'/>
    </format-rule>

    <format-rule type="close" eos="yes" priority="4">
      <tag regexp='[&quot;&#x027;][.,:;]'/>
    </format-rule>






<!-- bold & italic in wiki texts-->
    <format-rule type="open" eos="no" priority="8">
      <tag regexp='[\t ]&apos;&apos;&apos;&apos;&apos;'/>
    </format-rule>

    <format-rule type="open" eos="no" priority="8">
      <tag regexp='^&apos;&apos;&apos;&apos;&apos;'/>
    </format-rule>

    <format-rule type="close" eos="no" priority="8">
      <tag regexp='&apos;&apos;&apos;&apos;&apos;'/>
    </format-rule>

<!-- bold in wiki texts-->
    <format-rule type="open" eos="no" priority="9">
      <tag regexp='[\t ]&apos;&apos;&apos;'/>
    </format-rule>

    <format-rule type="open" eos="no" priority="9">
      <tag regexp='^&apos;&apos;&apos;'/>
    </format-rule>

    <format-rule type="close" eos="no" priority="9">
      <tag regexp='&apos;&apos;&apos;'/>
    </format-rule>

<!-- italic in wiki texts-->
    <format-rule type="open" eos="no" priority="10">
      <tag regexp='[\t ]&apos;&apos;'/>
    </format-rule>

    <format-rule type="open" eos="no" priority="10">
      <tag regexp='^&apos;&apos;'/>
    </format-rule>

    <format-rule type="close" eos="no" priority="10">
      <tag regexp='&apos;&apos;'/>
    </format-rule>




<!-- Headlines in wiki texts-->
    <format-rule type="open" eos="no" priority="11">
      <tag regexp='^=+'/>
    </format-rule>

    <format-rule type="close" eos="yes" priority="11">
      <tag regexp='=+[\n\r ]'/>
    </format-rule>



<!-- bulled and numerated lists in wiki texts-->
    <format-rule type="empty" eos="no" priority="11">
      <tag regexp='^[\*\#:;]+'/>
    </format-rule>


<!-- simple links in wiki texts-->

<!-- errorea ematen du!!
    <format-rule type="open" eos="no" priority="12">
      <tag regexp='\[\[[^\]]+\|'/>
    </format-rule>
-->
    <format-rule type="open" eos="no" priority="13">
      <tag regexp='\[\[\#?'/>
    </format-rule>

    <format-rule type="close" eos="no" priority="13">
      <tag regexp='\]\]'/>
    </format-rule>


    <format-rule type="empty" eos="yes" priority="20">
      <tag regexp='[\[\]\(\)\{\}]'/>
    </format-rule>


  </rules>
</format>
